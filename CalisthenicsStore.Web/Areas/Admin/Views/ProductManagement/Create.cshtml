@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CalisthenicsStore.ViewModels.Admin.ProductManagement.ProductInputModel

<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(to bottom, #1f1f1f, #4f4f4f);
        color: #333;
        margin: 0;
        padding: 0;
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        padding: 30px;
    }

        .form-container h2 {
            text-align: center;
            color: #222;
            margin-bottom: 25px;
        }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #333;
    }

    input[type="text"],
    input[type="number"],
    textarea,
    select {
        width: 100%;
        padding: 10px 14px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
        box-sizing: border-box;
    }

    textarea {
        resize: vertical;
    }

    .text-danger {
        color: red;
        font-size: 13px;
    }

    .form-actions {
        text-align: right;
    }

        .form-actions button {
            background-color: #444;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .form-actions button:hover {
                background-color: #000;
            }

    option {
        background: white;
        color: black;
    }
</style>

<div class="form-container">
    <h2>Add New Product</h2>

    <form asp-area="Admin" asp-controller="ProductManagement" asp-action="Create" method="post">
        <div>
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" placeholder="Enter product name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" rows="3" placeholder="Enter product description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Price">Price (BGN)</label>
            <input asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="StockQuantity">Stock Quantity</label>
            <input asp-for="StockQuantity" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" placeholder="Put your image link here" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="Model.Categories">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit">Add Product</button>
        </div>
    </form>
</div>
