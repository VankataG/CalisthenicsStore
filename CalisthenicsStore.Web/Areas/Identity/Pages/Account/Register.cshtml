@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register-login.css" />

<div class="register-wrapper">
    <div class="register-form-box">
        <h2 class="register-heading">Create New Account</h2>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
            <div class="input-group">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" placeholder=" " />
                <label asp-for="Input.FirstName">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="input-group">
                <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" placeholder=" " />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="input-group">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder=" " />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder=" " />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="input-group">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder=" " />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-register">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}