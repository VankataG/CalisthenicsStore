@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/register-login.css" />

<div class="register-wrapper">
	<div class="register-form-box">
		<h2 class="register-heading">Welcome Back</h2>
		<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<div class="input-group">
				<input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder=" " />
				<label asp-for="Input.Email">Email</label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>

			<div class="input-group">
				<input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder=" " />
				<label asp-for="Input.Password">Password</label>
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>

			<div class="form-check mb-3" style="color: #ccc;">
				<input asp-for="Input.RememberMe" class="form-check-input" />
				<label asp-for="Input.RememberMe" class="form-check-label">Remember Me</label>
			</div>

			<button type="submit" class="btn-register">Login</button>

			<div class="mt-3 text-center">
				<p>
					<a asp-page="./ForgotPassword" style="color: #ff4b4b;">Forgot your password?</a>
				</p>
				<p>
					<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #aaa;">
						Don’t have an account? <span style="color: #ff4b4b;">Register</span>
					</a>
				</p>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
