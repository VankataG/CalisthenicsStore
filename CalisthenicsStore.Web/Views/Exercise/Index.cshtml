
@using CalisthenicsStore.Common.Enums
@model IEnumerable<CalisthenicsStore.ViewModels.Exercise.ExerciseViewModel>


@{
	ViewData["Title"] = "Exercises";
}


<style>
    
    .exercise-gallery-section {
        padding: 3rem 2rem;
        background: linear-gradient(to bottom, #1f1f1f, #3a3a3a);
        color: #fff;
        border-radius: 0.3em;
    }

    .exercise-gallery-title {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 2rem;
        letter-spacing: 1px;
    }

    .exercise-gallery-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
    }

    .exercise-card {
        display: flex;
        flex-direction: column;
        background: #2a2a2a;
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        cursor: pointer;
    }

        .exercise-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 40px rgba(0,0,0,2);
        }

    .exercise-image-container {
        height: 200px;
        overflow: hidden;
    }

    .exercise-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
        display: block;
    }

   
    .exercise-card:hover .exercise-image {
        transform: scale(1.20);
    }

   
    .exercise-card-content {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
    }

    
    .exercise-name {
        margin: 0;
        font-size: 1.3rem;
        min-height: 2.2rem;
    }

    
    .exercise-level {
        font-size: 0.9rem;
        color: #bbb;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-top: 0.5rem;
    }


    .nav-levels{
        display: flex;
        gap: 10em;
        justify-content: center;
        align-items: center;
        list-style-type: none;
        margin-bottom: 3em;
        a{
            text-decoration: none;
            font-weight: bold;
            color: #eee;
            font-size: 1.2em;
            background: linear-gradient(to bottom, #1f1f1f, #3a3a3a);
            padding: 0.5em 1em;
            border-radius: 0.5em;
            box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
        }

        li:hover{
            transform: translateY(5px);
            box-shadow: rgb(38, 57, 77) 0px 20px 30px -5px;
        }
    }

    .exercise-card-li {
        text-decoration: none;
        color: inherit;
        display: block;
        width: 260px; /* фиксирана ширина за всяка карта */
        height: 420px; /* фиксирана височина за всяка карта */
        flex-shrink: 0;
    }
</style>

<aside>
	<ul class="nav-levels">
        <li><a asp-controller="Exercise" asp-action="Level" asp-route-level="@DifficultyLevel.Beginner">Beginner</a></li>
        <li><a asp-controller="Exercise" asp-action="Level" asp-route-level="@DifficultyLevel.Intermediate">Intermediate</a></li>
        <li><a asp-controller="Exercise" asp-action="Level" asp-route-level="@DifficultyLevel.Advanced">Advanced</a></li>
        <li><a asp-controller="Exercise" asp-action="Level" asp-route-level="@DifficultyLevel.Insane">Insane</a></li>
	</ul>
</aside>

<section class="exercise-gallery-section">
	<h1 class="exercise-gallery-title">Exercise Library</h1>

	<div class="exercise-gallery-grid">
		@foreach (var exercise in Model)
		{
			<a href="@Url.Action("Details", "Exercise", new {id = exercise.Id})" class="exercise-card-li">
				<div class="exercise-card">
					<div class="exercise-image-container">
						<img src="@exercise.ImageUrl" alt="@exercise.Name" class="exercise-image" />
					</div>
					<div class="exercise-card-content">
						<h2 class="exercise-name">@exercise.Name</h2>
						<p class="exercise-level">@exercise.Level</p>
					</div>
				</div>
			</a>
		}
	</div>
</section>