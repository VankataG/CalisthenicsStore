@{
	ViewData["Title"] = "Payment Proccessing";
}

<style>
    .thankyou-section {
        background-image: url('https://www.lacertosus.com/c/127-category_media/outdoor-indoor-calisthenics-rig-lacertosus.jpg');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        color: white;
        text-align: center;
    }

    .overlay {
        background-color: rgba(0, 0, 0, 0.6);
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2em;
    }

    .thankyou-card {
        background-color: rgba(33, 33, 33, 0.85);
        padding: 2.5em;
        border-radius: 15px;
        max-width: 600px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.4);
    }

        .thankyou-card h1 {
            font-size: 2.5em;
            margin-bottom: 0.5em;
            color: #a3e635;
        }

        .thankyou-card p {
            font-size: 1.2em;
            margin-bottom: 1.5em;
        }

    .home-btn {
        background-color: #00c292;
        color: white;
        padding: 0.75em 1.5em;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1em;
        transition: background 0.3s;
    }

        .home-btn:hover {
            background-color: #009a76;
        }

</style>

<section class="thankyou-section">
	<div class="overlay">
		<div class="thankyou-card">
            <h1>Payment received.</h1>
            <p>Confirming… refresh in a few seconds.</p>
			<a class="home-btn" href="javascript:location.reload()">Refresh</a>
		</div>
	</div>
</section>

<script>
    setTimeout(() => {
        location.reload();
    }, 3000);
</script>
