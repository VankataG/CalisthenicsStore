@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CalisthenicsStore.ViewModels.Order.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<style>
    .checkout-container {
        display: flex;
        justify-content: center;
        padding: 2em;
        background: linear-gradient(to bottom, #1f1f1f, #4f4f4f);
        color: white;
        min-height: 100vh;
    }

    .checkout-card {
        background-color: #2b2b2b;
        padding: 2em;
        border-radius: 15px;
        width: 100%;
        max-width: 700px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.4);
    }

    h1, h2 {
        margin-bottom: 1em;
        color: #f1f1f1;
    }

    .cart-section {
        margin-bottom: 2em;
    }

    .cart-item {
        display: flex;
        gap: 1em;
        align-items: center;
        background-color: #3a3a3a;
        padding: 1em;
        border-radius: 10px;
        margin-bottom: 1em;
    }

        .cart-item img {
            width: 80px;
            height: auto;
            border-radius: 8px;
            border: 1px solid #888;
        }

    .price {
        color: #a3e635;
        font-weight: bold;
        margin-top: 0.5em;
    }

    .cart-total {
        font-size: 1.2em;
        font-weight: bold;
        margin-top: 1em;
        text-align: right;
        color: #fff;
    }

    .form-control {
        width: 100%;
        padding: 0.75em;
        margin-bottom: 1em;
        border-radius: 8px;
        border: none;
        font-size: 1em;
        background-color: #444;
        color: white;
    }

    .confirm-btn {
        background-color: #00c292;
        color: white;
        border: none;
        padding: 0.75em 1.5em;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1em;
        transition: background 0.3s;
    }

        .confirm-btn:hover {
            background-color: #00a381;
        }

    .form-group {
        margin-bottom: 1em;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5em;
            font-weight: bold;
        }

    .text-danger {
        color: #ef4444;
        font-size: 0.9em;
    }

    .confirm-btn {
        background-color: #22c55e;
        color: white;
        border: none;
        padding: 0.75em 1.5em;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1em;
        transition: background 0.3s;
    }

        .confirm-btn:hover {
            background-color: #16a34a;
        }

</style>
<section class="checkout-container">
	<div class="checkout-card">
		<h1>🛒 Finish Order</h1>

		<div class="cart-section">
			<h2>Your Cart</h2>

			@foreach (var item in Model.CartItems)
			{
				<div class="cart-item">
					<img src="@item.ImageUrl" alt="Product Image" />
					<div>
						<p><strong>@item.ProductName</strong> (@item.Quantity)</p>
						<p class="price">@($"{(item.Price * item.Quantity):F2}") BGN.</p>
					</div>
				</div>
			}

			<div class="cart-total">
				<strong>Total:</strong> @($"{Model.TotalPrice:F2}") BGN.
			</div>
		</div>

		<div class="order-info">
			<h2>Order Info</h2>
			<form asp-action="PlaceOrder" method="post">

				<div class="form-group">
					<label asp-for="City"></label>
					<input asp-for="City" placeholder="Enter your City" class="form-control"/>
                    <span asp-validation-for="City" class="text-danger fw-bold"></span>
				</div>

				<div class="form-group">
					<label asp-for="Address"></label>
					<input asp-for="Address" placeholder="Enter your Address" class="form-control"/>
					<span asp-validation-for="Address" class="text-danger fw-bold"></span>
				</div>

				<button type="submit" class="confirm-btn">Confirm Order</button>
			</form>
		</div>
	</div>
</section>

				
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}